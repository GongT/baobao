		"@internal/local-rig": "workspace:^",
		"@mpis/run": "workspace:^",
		"@rushstack/heft": "^0.74.0",
		"@types/node": "^24.0.14"
	},
	"publishConfig": {
		"packCommand": ["publisher", "pack"]
	}
