{
	"name": "@idlebox/ignore-edit",
	"type": "module",
	"version": "0.0.4",
	"description": "api for modify .*ignore files",
	"keywords": ["gitignore", "ignorefile"],
	"exports": {
		".": {
			"default": "./lib/api.js"
		},
		"./package.json": "./package.json"
	},
	"bin": "bin.js",
	"sideEffects": false,
	"scripts": {
		"prepublishHook": "internal-prepublish-hook",
