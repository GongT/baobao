{
	"name": "@idlebox/json-edit",
	"type": "module",
	"version": "0.0.7",
	"description": "Edit json file with comments (jsonc), reformat or preserve it's original format.",
	"keywords": ["comment", "edit", "json", "jsonc"],
	"exports": {
		".": {
			"source": "./src/index.ts",
			"types": "./src/index.ts",
			"default": "./lib/index.js"
		},
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"scripts": {
		"prepublishHook": "internal-prepublish-hook",
		"prepack": "mpis-run build --clean",
		"build": "mpis-run build",
		"watch": "mpis-run watch",
		"clean": "mpis-run clean",
		"test": "vite-node test/test.ts",
		"lint": "internal-lint",
		"prepublishOnly": "internal-prepublish-deny"
	},
	"dependencies": {
		"comment-json": "^4.2.5",
		"prettier": "^3.6.2"
	},
	"devDependencies": {
		"@build-script/single-dog-asset": "workspace:^",
		"@internal/local-rig": "workspace:^",
		"@mpis/run": "workspace:^",
		"@types/node": "^24.0.14",
		"@idlebox/source-map-support": "workspace:^",
		"tslib": "^2.8.1",
		"vite-node": "^3.2.4"
	},
	"publishConfig": {
		"packCommand": ["publisher", "pack"]
	}
}
