{
	"name": "@idlebox/esbuild-executer",
	"description": "A simple script to execute typescript file during development.",
	"version": "0.0.1",
	"type": "module",
	"main": "./lib/index.js",
	"bin": {
		"es-node": "./lib/bin.js"
	},
	"engines": {
		"node": ">=18.19.0 < 20 || >=20.6.0"
	},
	"exports": {
		".": "./lib/index.js",
		"./register": "./lib/hook-worker.js",
		"./lib/hook-worker.js": "./lib/hook-worker.js",
		"./package.json": "./package.json"
	},
	"keywords": [
		"typescript",
		"esbuild",
		"executer",
		"runner"
	],
	"license": "MIT",
	"scripts": {
		"prepack": "rimraf lib && tsc -p src",
		"clean": "rimraf lib",
		"build": "tsc -p src",
		"watch": ""
	},
	"dependencies": {
		"debug": "^4.4.1",
		"esbuild": "^0.25.5",
		"import-meta-resolve": "^4.1.0",
		"source-map-support": "^0.5.21",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@build-script/single-dog-asset": "workspace:^",
		"@mpis/typescript": "workspace:*",
		"@types/node": "^22.15.21",
		"@types/source-map-support": "^0.5.10",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	}
}
