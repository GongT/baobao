{
	"extends": "../node_modules/@idlebox/single-dog-asset/package/tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"outDir": "../lib",
		"rootDir": ".",
		"lib": [
			"esnext",
			"dom"
		],
		"typeRoots": [
			"../node_modules/@types"
		],
		"plugins": [
			{
				"transform": "@idlebox/typescript-transformer-dual-package",
				"verbose": true
			}
		],
		"declaration": false,
		"declarationMap": false
	},
	"include": [
		"**/*.ts"
	]
}
