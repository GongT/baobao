{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Fast Update",
			"type": "process",
			"icon": {
				"id": "package",
				"color": "terminal.ansiGreen"
			},
			"options": {
				"env": {
					"npm_config_prefer_offline": "true"
				}
			},
			"command": "node",
			"args": ["${workspaceFolder}/common/scripts/install-run-rush.js", "update"],
			"problemMatcher": []
		},
		{
			"label": "Install Dependencies",
			"type": "process",
			"icon": {
				"id": "package"
			},
			"options": {
				"env": {
					"npm_config_prefer_offline": "false"
				}
			},
			"command": "node",
			"args": ["${workspaceFolder}/common/scripts/install-run-rush.js", "update", "--full"],
			"problemMatcher": []
		},
		{
			"label": "Format Code",
			"icon": {
				"id": "code"
			},
			"type": "process",
			"windows": {
				"type": "shell"
			},
			"command": "node",
			"args": ["${workspaceFolder}/common/scripts/install-run-rush.js", "pretty"],
			"problemMatcher": []
		},
		{
			"label": "Watch All",
			"icon": {
				"id": "eye-watch"
			},
			"type": "shell",
			"command": "rush build:watch",
			"problemMatcher": "$tsc-watch"
		},
		{
			"label": "Build",
			"icon": {
				"id": "wrench"
			},
			"type": "shell",
			"command": "rush build",
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Cleanup Everything",
			"icon": {
				"id": "repo-delete"
			},
			"type": "process",
			"windows": {
				"type": "shell"
			},
			"command": "node",
			"args": ["${workspaceFolder}/common/scripts/install-run-rush.js", "distclean"],
			"problemMatcher": []
		}
	]
}
