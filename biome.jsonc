{
	"$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
	},
	"files": {
		"ignoreUnknown": true,
	},
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "off",
				"useSortedKeys": "off",
				"useSortedProperties": "off",
				"useSortedAttributes": "on",
			},
		},
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"formatWithErrors": false,
		"lineEnding": "lf",
		"lineWidth": 120,
		"useEditorconfig": false,
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noControlCharactersInRegex": "off",
				"noImplicitAnyLet": "off",
			},
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "warn",
				"useShorthandFunctionType": "off",
				"noUselessElse": "off",
				"noUnusedTemplateLiteral": "off",
				"noDefaultExport": "error",
				"useConsistentArrayType": {
					"level": "off",
					"options": { "syntax": "shorthand" },
				},
				"noSubstr": "info",
				"useAtIndex": "info",
			},
			"complexity": {
				"noThisInStatic": "off",
				"useLiteralKeys": "off",
				"noArguments": "off",
			},
			"correctness": {
				"useImportExtensions": {
					"fix": "unsafe",
					"level": "error",
					"options": {
						"forceJsExtensions": true,
					},
				},
			},
			"nursery": {},
			"performance": {
				"useTopLevelRegex": "info",
				"noDelete": "off",
			},
			"security": {},
		},
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "all",
			"lineWidth": 300,
		},
		"linter": {
			"enabled": true,
		},
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true,
			"allowComments": true,
		},
		"formatter": {
			"enabled": true,
			"trailingCommas": "none",
		},
		"linter": {
			"enabled": true,
		},
	},
	"overrides": [
		{
			"includes": ["**/*.ts"],
		},
		{
			"includes": ["**/tsconfig.json", "**/tsconfig.*.json", "**/.vscode/*.json", "**/*.jsonc"],
			"json": {
				"formatter": {
					"trailingCommas": "all",
				},
			},
		},
		{
			"includes": ["**/package.json"],
			"formatter": {
				"expand": "auto",
				"lineWidth": 300,
			},
		},
	],
	"css": {
		"formatter": {
			"enabled": true,
		},
		"linter": {
			"enabled": true,
		},
	},
}
