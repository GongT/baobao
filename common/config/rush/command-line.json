{
	/* Doc: https://rushjs.io/pages/configs/command_line_json/ */
	"$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",
	"commands": [
		{
			"commandKind": "global",
			"name": "fix",
			"summary": "Check and update every project's dependency versions",
			"safeForSimultaneousRushProcesses": true,
			"shellCommand": "node @build-script/rush-tools/bin.cjs autofix"
		},
		{
			"commandKind": "global",
			"name": "pretty",
			"summary": "Run pretty-quick",
			"safeForSimultaneousRushProcesses": true,
			"shellCommand": "./common/temp/node_modules/.bin/pretty-quick"
		},
		{
			"commandKind": "global",
			"name": "watch",
			"summary": "Run watch in every project",
			"safeForSimultaneousRushProcesses": true,
			"shellCommand": "node common/project-scripts/lib/watch-all.js"
		},
		{
			"commandKind": "global",
			"name": "batch-modify-json",
			"summary": "batch modify json of each project",
			"safeForSimultaneousRushProcesses": true,
			"shellCommand": "node common/project-scripts/lib/batch-modify-json.js"
		},
		{
			"commandKind": "global",
			"name": "update-version",
			"summary": "Check local change and modify package.json if needed",
			"safeForSimultaneousRushProcesses": true,
			"shellCommand": "node common/project-scripts/lib/poor-change.js"
		},
		{
			"commandKind": "global",
			"name": "yarn-publish",
			"summary": "publish all packages if needed",
			"safeForSimultaneousRushProcesses": false,
			"shellCommand": "node common/project-scripts/lib/poor-publish.js"
		},
		{
			"commandKind": "bulk",
			"name": "clean",
			"summary": "Run clean in every project",
			"enableParallelism": true,
			"ignoreDependencyOrder": true,
			"allowWarningsInSuccessfulBuild": true,
			"ignoreMissingScript": false
		}
	],
	"parameters": [
		{
			"parameterKind": "flag",
			"longName": "--no-systemd",
			"description": "Do not using systemd-run to create standalone run environment",
			"associatedCommands": ["watch", "update-version", "yarn-publish"]
		},
		{
			"argumentName": "FILE",
			"parameterKind": "string",
			"longName": "--file",
			"shortName": "-f",
			"description": "file path (relative to package.json) to modify",
			"associatedCommands": ["batch-modify-json"]
		},
		{
			"parameterKind": "choice",
			"longName": "--action",
			"shortName": "-a",
			"description": "action to do (push|unshift|set|unset)",
			"associatedCommands": ["batch-modify-json"],
			"alternatives": [
				{
					"name": "set",
					"description": "Set some value"
				},
				{
					"name": "unset",
					"description": "Unset some value"
				},
				{
					"name": "push",
					"description": "Push some array"
				},
				{
					"name": "unshift",
					"description": "Unshift some array"
				}
			]
		},
		{
			"argumentName": "KEY",
			"parameterKind": "string",
			"longName": "--key",
			"shortName": "-k",
			"description": "key to modify",
			"associatedCommands": ["batch-modify-json"]
		},
		{
			"argumentName": "VALUE",
			"parameterKind": "string",
			"longName": "--value",
			"shortName": "-v",
			"description": "property value",
			"associatedCommands": ["batch-modify-json"]
		}
	]
}
