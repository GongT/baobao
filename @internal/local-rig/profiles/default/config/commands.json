{
	"$schema": "../../../node_modules/@mpis/run/commands.schema.json",
	"commands": {
		"autoindex": {
			"command": {
				"package": "@build-script/autoindex",
				"binary": "autoindex",
				"arguments": ["--config"],
			},
		},

		/**
		 *
		 */
		"codegen": {
			"command": {
				"package": "@build-script/codegen",
				"binary": "codegen",
				"arguments": ["src"],
			},
		},

		/**
		 *
		 */
		"depcheck": {
			"command": {
				"package": "@build-script/depcheck",
				"binary": "depcheck",
			},
		},

		/**
		 *
		 */
		"typescript": {
			"title": "Compile TypeScript",
			"command": {
				"package": "@mpis/typescript",
				"binary": "mpis-tsc",
				"arguments": ["-p", "src"],
			},
			"watch": ["-w"],
			"cwd": ".",
			"env": {},
		},
	},
	"clean": ["lib"],
}
