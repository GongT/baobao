	"type": "commonjs",
	"version": "0.0.5",
	"types": "./src/index.ts",
	"main": "./lib/index.js",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"source": "./src/index.ts",
			"require": "./lib/index.js"
		},
		"./loader": "./helpers/loader-wrap.js",
		"./package.json": "./package.json"
