{
	"name": "@build-script/heft-codegen-plugin",
	"type": "commonjs",
	"version": "0.0.14",
	"bin": {
		"codegen": "loader/bin.js"
	},
	"main": "./loader/plugin.js",
	"types": "./src/plugin.ts",
	"exports": {
		".": {
			"types": "./src/plugin.ts",
			"default": "./loader/plugin.js"
		},
		"./binary-entry": "./loader/bin.js",
		"./executer-thread": "./loader/executer-thread.js",
		"./package.json": "./package.json"
	},
	"publishConfig": {
		"main": "./lib/plugin.js",
		"types": "./lib/plugin.d.ts",
		"exports": {
			".": "./lib/plugin.js",
			"./binary-entry": "./lib/bin.js",
			"./executer-thread": "./lib/executer-thread.js",
			"./package.json": "./package.json"
		}
	},
	"scripts": {
		"prepack": "heft build --clean",
		"test": "heft test --clean",
		"build": "heft compile",
		"_phase:build": "heft compile",
		"watch": "heft compile-watch",
		"clean": "heft clean"
	},
	"dependencies": {
		"@build-script/heft-plugin-base": "workspace:^",
		"@idlebox/chokidar": "workspace:^",
		"@idlebox/json-extends-loader": "workspace:^",
		"@supercharge/promise-pool": "^3.2.0",
		"esbuild": "^0.25.5",
		"execa": "^9.6.0",
		"glob": "^11.0.2",
		"minimatch": "^10.0.1",
		"source-map-support": "^0.5.21",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@build-script/single-dog-asset": "workspace:^",
		"@internal/local-rig": "workspace:^",
		"@rushstack/heft": "^0.73.6",
		"@types/node": "^22.15.21",
		"typescript": "^5.8.3"
	}
}
