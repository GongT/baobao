{
	"name": "@build-script/rushstack-config-loader",
	"type": "module",
	"version": "0.0.31",
	"exports": {
		".": {
			"source": "./src/api.ts",
			"default": "./lib/api.js"
		},
		"./heft-plugin": {
			"default": "./lib/api-heft-plugin.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepack": "mpis-run build --clean",
		"build": "mpis-run build",
		"watch": "mpis-run watch",
		"clean": "mpis-run clean",
		"prepublishHook": "internal-prepublish-hook",
		"lint": "internal-lint",
		"prepublishOnly": "internal-prepublish-deny"
	},
	"dependencies": {
		"@idlebox/json-extends-loader": "workspace:^",
		"@idlebox/tsconfig-loader": "workspace:^",
		"@idlebox/deepmerge": "workspace:^",
		"@rushstack/rig-package": "^0.6.0",
		"ajv": "^8.17.1",
		"import-meta-resolve": "^4.2.0"
	},
	"devDependencies": {
		"@build-script/baseline-rig": "workspace:^",
		"@internal/local-rig": "workspace:^",
		"@microsoft/api-extractor": "^7.55.2",
		"@mpis/run": "workspace:^",
		"@rushstack/heft": "^1.1.7",
		"@rushstack/heft-typescript-plugin": "^1.1.7",
		"@rushstack/terminal": "latest",
		"@types/node": "^25.0.8"
	},
	"publishConfig": {
		"packCommand": ["publisher", "pack"]
	},
	"sideEffects": false
}
