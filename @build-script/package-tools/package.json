{
	"name": "@build-script/package-tools",
	"type": "module",
	"version": "0.0.17",
	"description": "A Node.js package managing tool",
	"bin": {
		"package-tools": "./load.js",
		"njspkg": "./load.js"
	},
	"exports": {
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepublishHook": "internal-prepublish-hook",
		"prepack": "mpis-run build --clean",
		"build": "mpis-run build",
		"watch": "mpis-run watch",
		"clean": "mpis-run clean",
		"lint": "internal-lint",
		"prepublishOnly": "internal-prepublish-deny"
	},
	"dependencies": {
		"@build-script/monorepo-lib": "workspace:^",
		"@idlebox/cli": "workspace:^",
		"@idlebox/common": "workspace:^",
		"@idlebox/dependency-graph": "workspace:^",
		"@idlebox/ensure-symlink": "workspace:^",
		"@idlebox/json-edit": "workspace:^",
		"@idlebox/node": "workspace:^",
		"@idlebox/source-map-support": "workspace:^",
		"@idlebox/unshare": "workspace:^",
		"cacache": "^20.0.3",
		"execa": "^9.6.1",
		"make-fetch-happen": "^15.0.3",
		"minimatch": "^10.1.1",
		"npm-registry-fetch": "^19.1.1",
		"pacote": "^21.0.4",
		"semver": "^7.7.3",
		"split-cmd": "^1.1.0",
		"targz": "^1.0.1",
		"tiny-async-pool": "^2.1.0"
	},
	"devDependencies": {
		"@build-script/codegen": "workspace:^",
		"@build-script/single-dog-asset": "workspace:^",
		"@idlebox/cli-static-generator": "workspace:^",
		"@internal/local-rig": "workspace:^",
		"@mpis/run": "workspace:^",
		"@types/cacache": "^20.0.0",
		"@types/global-agent": "^3.0.0",
		"@types/node": "^25.0.8",
		"@types/npm-registry-fetch": "^8.0.9",
		"@types/request": "^2.48.13",
		"@types/semver": "^7.7.1",
		"@types/targz": "^1.0.5",
		"@types/tiny-async-pool": "^2.0.3",
		"@types/tinycolor2": "^1.4.6"
	},
	"publishConfig": {
		"packCommand": ["publisher", "pack"]
	},
	"sideEffects": false
}
