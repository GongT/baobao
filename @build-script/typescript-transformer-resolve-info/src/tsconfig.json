{
	"extends": "local-rig/profiles/default/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "../lib",
		"rootDir": ".",
		"types": ["node"],
		"incremental": false,
		"plugins": [
			{
				"transform": "@build-script/typescript-transformer-dual-package"
			},
			{
				"transform": "./register.ts"
			}
		]
	},
	"include": ["**/*.ts"]
}
