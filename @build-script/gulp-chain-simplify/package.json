{
	"name": "@build-script/gulp-chain-simplify",
	"type": "module",
	"version": "0.0.13",
	"license": "MIT",
	"author": "GongT <admin@gongt.me> https://github.com/gongt/",
	"main": "./lib/index.cjs",
	"module": "./lib/index.js",
	"exports": {
		".": { "import": "./lib/index.js", "require": "./lib/index.cjs" },
		"./package.json": "./package.json"
	},
	"types": "./lib/index.d.ts",
	"scripts": {
		"prepack": "run-s -l clean compile:*",
		"build": "run-s compile:*",
		"build:watch": "run-s compile:*",
		"compile:normal": "ttsc -p src --declarationMap false",
		"compile:fixmap": "tsc -p src --declarationMap true",
		"clean": "rimraf lib dist .rush temp",
		"watch": "ttsc -w -p src --declarationMap false"
	},
	"dependencies": {
		"tslib": "^2.4.1"
	},
	"devDependencies": {
		"@build-script/single-dog-asset": "workspace:*",
		"@build-script/typescript-transformer-dual-package": "workspace:*",
		"@types/undertaker": "^1.2.8",
		"local-rig": "workspace:*",
		"typescript": "^4.9.3"
	},
	"monorepo": "rush"
}
