{
	"name": "@build-script/gulp-chain-simplify",
	"version": "0.0.4",
	"license": "MIT",
	"type": "module",
	"author": "GongT <admin@gongt.me> https://github.com/gongt/",
	"main": "./lib/index.cjs",
	"module": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"exports": {
		"import": "./lib/index.js",
		"require": "./lib/index.cjs"
	},
	"scripts": {
		"build": "run-s build:*",
		"build:normal": "ttsc -p src --declarationMap false",
		"build:fixmap": "tsc -p src --declarationMap true",
		"clean": "rimraf lib",
		"prepack": "run-s -l clean build:*",
		"watch": "ttsc -w -p src --declarationMap false"
	},
	"monorepo": "rush",
	"peerDependencies": {
		"gulp": "*"
	},
	"devDependencies": {
		"@build-script/single-dog-asset": "^1.0.13",
		"@types/undertaker": "^1.2.7",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"gulp": "^4.0.2",
		"ttypescript": "^1.5.12",
		"typescript": "^4.3.5",
		"@build-script/typescript-transformer-dual-package": "^1.0.20"
	},
	"dependencies": {
		"tslib": "^2.3.0"
	}
}
