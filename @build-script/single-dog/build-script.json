{
	"alias": {
		"build-ts": "tsc -p src",
		"watch-ts": "tsc -w -p src",
		"do-publish": "pnpm publish --no-git-checks",
		"upgrade-node-modules": "npm-check-updates --update --packageFile ./package.json",
		"run-test": ""
	},
	"command": {
		"build": {
			"title": "Build project",
			"run": ["build-ts"]
		},
		"rebuild": {
			"title": "Prepare for publish package",
			"run": ["@build"],
			"after": ["clean"]
		},
		"publish": {
			"title": "Publish package",
			"run": ["do-publish"],
			"after": ["rebuild"]
		},
		"test": {
			"title": "Run test",
			"run": ["run-test"],
			"after": ["build"]
		},
		"upgrade": {
			"title": "Do project dependency upgrade",
			"run": ["upgrade-node-modules"]
		},
		"watch": {
			"title": "Watch mode build project",
			"run": ["watch-ts"]
		}
	}
}
