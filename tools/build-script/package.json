{
	"monorepo": "rush",
	"name": "@idlebox/build-script",
	"version": "1.0.1",
	"main": "./main.js",
	"typings": "./lib/api.d.ts",
	"bin": {
		"build-script-call": "bin/call.js",
		"build-script-init": "bin/init.js",
		"rimraf": "bin/rimraf.js"
	},
	"license": "MIT",
	"scripts": {
		"clean": "rimraf lib",
		"watch": "tsc -p src -w",
		"build:define": "api-extractor --local --verbose",
		"build:tsc": "tsc -p src",
		"build": "run-s -l build:*",
		"prepublish": "run-s -l clean build:*",
		"upgrade": "ncu --upgrade --packageFile ./package.json"
	},
	"dependencies": {
		"@idlebox/node-json-edit": "^1.0.10",
		"@types/execa": "^0.9.0",
		"@types/fancy-log": "^1.3.1",
		"@types/gulp": "^4.0.6",
		"execa": "^2.0.2",
		"fancy-log": "^1.3.3",
		"fs-extra": "^8.1.0",
		"gulp": "^4.0.2",
		"source-map-support": "^0.5.12"
	},
	"devDependencies": {
		"@gongt/single-dog": "^2.0.2",
		"@microsoft/api-extractor": "^7.2.3",
		"@types/fs-extra": "^8.0.0",
		"@types/node": "^12.0.12",
		"npm-check-updates": "^3.1.13",
		"npm-run-all": "^4.1.5",
		"rimraf": "^2.6.3",
		"typescript": "^3.5.2"
	}
}
