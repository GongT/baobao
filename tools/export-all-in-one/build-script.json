{
	"alias": {
		"build-ts": [
			"tsc",
			"-p",
			"src"
		],
		"watch-ts": [
			"tsc",
			"-w",
			"-p",
			"src"
		],
		"cleanup-lib": [
			"rimraf",
			"lib"
		],
		"yarn-publish": [
			"yarn",
			"publish",
			"--registry",
			"https://registry.npmjs.org",
			"--access=public"
		],
		"upgrade-node-modules": [
			"npm-check-updates",
			"--update",
			"--packageFile",
			"./package.json"
		],
		"run-test": [
			"echo",
			"No",
			"test",
			"command",
			"set."
		]
	},
	"command": {
		"build": {
			"title": "Build project",
			"run": [
				"build-ts"
			]
		},
		"cleanup": {
			"title": "Cleanup build result",
			"run": [
				"cleanup-lib"
			]
		},
		"prepublish": {
			"title": "Prepare for publish package",
			"run": [
				"@build"
			],
			"after": [
				"cleanup"
			]
		},
		"publish": {
			"title": "Publish package",
			"run": [
				"yarn-publish"
			],
			"after": [
				"prepublish"
			]
		},
		"test": {
			"title": "Run test",
			"run": [
				"run-test"
			],
			"after": [
				"build"
			]
		},
		"upgrade": {
			"title": "Do project dependency upgrade",
			"run": [
				"upgrade-node-modules"
			]
		},
		"watch": {
			"title": "Watch mode build project",
			"run": [
				"watch-ts"
			]
		}
	}
}
