{
	"name": "@idlebox/node-json-edit",
	"description": "Edit json file and preserve it's indent and line feed and final new line.",
	"version": "1.0.15",
	"monorepo": true,
	"main": "./lib/node-json-edit.js",
	"typings": "./lib/node-json-edit.d.ts",
	"scripts": {
		"build": "tsc -p src",
		"prepack": "rimraf lib && tsc -p src",
		"publishPackage": "yarn publish --registry https://registry.npmjs.org --access=public",
		"upgrade": "ncu --upgrade --packageFile ./package.json",
		"watch": "tsc -p src -w",
		"clean": "rimraf lib"
	},
	"repository": {
		"type": "github",
		"url": "gongt/node-json-edit"
	},
	"license": "MIT",
	"dependencies": {
		"comment-json": "^2.1.0"
	},
	"devDependencies": {
		"@types/comment-json": "^1.1.1",
		"@idlebox/single-dog-asset": "^1.0.1",
		"@types/node": "^12.7.8",
		"npm-check-updates": "^3.1.23",
		"rimraf": "^3.0.0",
		"typescript": "^3.6.3"
	}
}
