{
	"$schema": "/data/DevelopmentRoot/github.com/gongt/idlebox/tools/build-script/schema.json",
	"actions": {
		"build": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"@prebuild",
				"@compile",
				"@postbuild"
			]
		},
		"compile": {
			"type": "parallel",
			"exported": false,
			"sequence": [
				"tsc"
			]
		},
		"compile-watch": {
			"type": "parallel",
			"exported": false,
			"sequence": [
				"tscWatch"
			]
		},
		"postbuild": {
			"type": "parallel",
			"exported": false,
			"sequence": []
		},
		"prebuild": {
			"type": "parallel",
			"exported": false,
			"sequence": [
				"cleanOutput"
			]
		},
		"prepare": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"@prebuild",
				"forceTsc"
			]
		},
		"prepublish": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"@build"
			]
		},
		"publish": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"publish"
			]
		},
		"test": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"runTest"
			]
		},
		"upgrade": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"npm-check-updates"
			]
		},
		"watch": {
			"type": "serial",
			"exported": true,
			"sequence": [
				"@prebuild",
				"@compile-watch"
			]
		}
	},
	"jobs": {
		"cleanOutput": [
			"rimraf",
			"lib",
			"dist",
			"out"
		],
		"forceTsc": [
			"tsc",
			"-p",
			"src",
			"--noEmitOnError",
			"false"
		],
		"npm-check-updates": [
			"npm-check-updates",
			"--update",
			"--packageFile",
			"./package.json"
		],
		"publish": [
			"yarn",
			"publish",
			"--registry",
			"https://registry.npmjs.org --access=public"
		],
		"runTest": [
			"echo",
			"No test case set."
		],
		"tsc": [
			"tsc",
			"-p",
			"src"
		],
		"tscWatch": [
			"tsc",
			"-p",
			"src",
			"-w"
		]
	},
	"plugins": []
}
